      <% if (messages.error && messages.error.length > 0) { %>
        <div class="notification error">
            <%= messages.error[0] %>
            <span class="close-button" onclick="removeErrorMessage()">×</span>
        </div>
    <% } %>

    <% if (messages.success && messages.success.length > 0) { %>
      <div class="notification success">
          <%= messages.success[0] %>
          <span class="close-button" onclick="removeNotification()">×</span>
      </div>
  <% } %>

    <!-- Your login form and other content here -->

    <script>
      function removeNotification() {
          // Remove the notification container from the DOM
          var notification = document.querySelector('.notification');
          notification.remove();
      }
  </script>
    
    


        <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
  <div class="row gx-lg-5 align-items-center mb-5">
    <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
      <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(220, 29%, 46%)">
        Welcome to <br />
        <span style="color: hsl(218, 81%, 75%)">User-Management-System</span>
      </h1>
      <p class="mb-4 opacity-70" style="color: hsl(218, 44%, 20%)">
        The user management system's login page is a secure gateway that allows registered users to access their accounts using unique credentials, like an email and password. It ensures data privacy and system security, allowing only authorized individuals to access personalized features and functionalities.
      </p>
    </div>

    <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
      <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
      <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

      <div class="card bg-glass">
        <div class="card-body px-4 py-5 px-md-5">
          <form action="/loging" method="post">
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row">
              
              

               

              <h1 class="mb-3 h3">Login</h1>
              
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
              <input type="email" name="email" id="form3Example3" class="form-control" />
